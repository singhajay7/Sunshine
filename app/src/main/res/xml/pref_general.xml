<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="@string/def_location_value"
        android:inputType="text"
        android:key="@string/pref_location_key"
        android:singleLine="true"
        android:title="@string/pref_location">
    </EditTextPreference>

    <ListPreference
        android:defaultValue="@string/def_temp_value"
        android:entries="@array/pref_temp_entries"
        android:entryValues="@array/pref_temp_entry_values"
        android:key="@string/pref_temp_key"
        android:title="@string/pref_temperature">
    </ListPreference>

</PreferenceScreen>